<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_dashboard"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.submission8.view.dasboard.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_mainActivity"
            app:destination="@id/mainActivity"
            app:launchSingleTop="true"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/userFragment"
        android:name="com.example.submission8.view.dasboard.UserFragment"
        android:label="fragment_user"
        tools:layout="@layout/fragment_user" />
    <fragment
        android:id="@+id/todoFragment"
        android:name="com.example.submission8.view.dasboard.TodoFragment"
        android:label="fragment_todo"
        tools:layout="@layout/fragment_todo" />
    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.submission8.view.main.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
</navigation>